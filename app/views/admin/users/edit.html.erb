<%= form_for [:admin, @user] do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :role %>
  <%= f.number_field :role, max: 1 %>

  <%= f.submit "Edit Account" %>
<% end %>
