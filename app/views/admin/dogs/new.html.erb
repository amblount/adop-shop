<div class="container">
    <div class="row">
        <div class="col-xs-12">
          <h1>List a Dog for Adoption</h1>
          <p>Fill in the form below to list a dog for adoption</p>
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-4">
          <%= form_for [:admin, @dog] do |f| %>

            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>

            <%= f.label :breed %>
            <%= f.text_field :breed, class: "form-control" %>

            <%= f.label "Image (URL)" %>
            <%= f.text_field :image, class: "form-control", placeholder: "e.g. https://images.unsplash.com/photo-1497491547929-f290ed8d32fc" %>

            <%= f.label :size %>
            <%= f.select :size, [["Small", "Small"],["Medium", "Medium"], ["Large", "Large"]], {prompt: "Select a size"}, {class: "form-control"} %>

            <%= f.label :weight, "Weight (lbs)" %>
            <%= f.number_field :weight, within: 1..300, class: "form-control", placeholder: "e.g. 50lbs" %>

            <p></p>

            <%= f.label :cat_friendly %>
            <%= f.check_box :cat_friendly %>

            <p></p>


            <%= f.label :gender %>
            <%= f.select :gender, [["Male", "Male"],["Female", "Female"]], {prompt: "Select a gender"}, {class: "form-control"} %>

            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control" %>

            <p></p>

            <%= f.label :category_ids,  "Type" %>
            <%= f.select :category_ids, categories_collection, {}, { :multiple => true} %>

            <p></p>

            <%= f.label :price, "Price ($)" %>
            <%= f.number_field :price, min: 0, class: "form-control", placeholder: "e.g. $50" %>

            <%= f.label :retired %>
            <%= f.check_box :retired %>

            <%= f.submit "Create Dog", class: "btn btn-primary", style: 'float:right; margin-top: 40px; margin-bottom: 40px;'%>
          <% end %>

        </div>
         <div class="col-md-offset-2 col-md-4">
         <p></p>
          <div class="thumbnail" style="margin-top: 26px;">
            <img src="https://image.ibb.co/eHGASR/undraw_girl_and_dog_yuhw.png" alt="...">
          </div>

         </div>
    </div>
</div>
