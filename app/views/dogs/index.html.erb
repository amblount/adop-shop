<div class="container">
    <div class="row">
        <div class="col-xs-12">

          <div class="row">

            <% @dogs.each do |dog| %>
            <div class="col-sm-6 col-md-4">
              <div class="thumbnail">
                <% if dog.image == nil %>
                  <img data-src="holder.js/100%x200" alt="100%x200" src= "https://image.ibb.co/nNdMGm/dog_logo.jpg" data-holder-rendered="true" style="height: auto; width: 100%; display: block;">
                <% else %>
                  <%= image_tag dog.image, style: "height: 200px; width: 100%; display: block;" %>
                <% end %>                <div class="caption">
                  <h3 id="thumbnail-label"><%= dog.name %></h3>
                  <p>Breed: <%= dog.breed %></p>
                  <p>Price: <%= number_to_currency(dog.price) %></p>
                   <div style="display:flex;">
                    <p><%= link_to "View Dog", dog_path(dog.slug),:class => "btn btn-xs btn-info", style: "margin-right:10px;" %></p>
                    <p><%= button_to "Add Dog", carts_path(dog_id: dog.id), :class => "btn btn-xs btn-primary"%></p>
                  </div>
                </div>
              </div>
            </div>
            <% end %>


          </div>



        </div>
    </div>
</div>
