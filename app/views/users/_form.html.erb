<%= form_for @user do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username, :class => "form-control" %>

  <%= f.label :password %>
  <%= f.password_field :password, :class => "form-control" %>

  <%= f.label :address %>
  <%= f.text_field :address, :class => "form-control" %>

  <%= f.label :city %>
  <%= f.text_field :city, :class => "form-control" %>

  <%= f.label :state %>
  <%= f.text_field :state, :class => "form-control", maxlength: 2 %>


  <%= f.label :zipcode %>
  <%= f.number_field :zipcode, :class => "form-control", max: 99999 %>

  <%= f.label "Full Name" %>
  <%= f.text_field :name, :class => "form-control" %>

  <%= f.submit 'Create Account ', :class => 'btn btn-sm btn-primary',style: 'float:right; margin-top: 40px;' %>
<% end %>
